<Page
    x:Class="MinesweeperBeta.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MinesweeperBeta"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonRevealStyle}" />
    </Page.Resources>

    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Rectangle Name="LeftSidePanel" 
                   Grid.Column="0"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <TextBlock Text="Minesweeper Beta"
                       Style="{StaticResource HeaderTextBlockStyle}"
                       TextAlignment="Center"/>
            <Grid Name="PlayingField"
                  Grid.Row="1"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Name="Bombs_TextBlock"
                           Style="{StaticResource BaseTextBlockStyle}"
                           TextAlignment="Center"/>
                <TextBlock Name="Flags_TextBlock"
                           Style="{StaticResource BaseTextBlockStyle}"
                           Grid.Column="1"
                           TextAlignment="Center"/>
            </Grid>
        </Grid>
        
        <Rectangle Name="RightSidePanel"
                   Grid.Column="2"/>
    </Grid>
</Page>
