<Page
    x:Class="MinesweeperBeta.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MinesweeperBeta"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonRevealStyle}" />
    </Page.Resources>

    <Grid Background="{ThemeResource SystemControlAccentAcrylicWindowAccentMediumHighBrush}">
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Text="Minesweeper Beta"
                       Style="{StaticResource HeaderTextBlockStyle}"
                       TextAlignment="Center"/>
            <Viewbox Grid.Row="1" Name="PlayingField_ViewBox">
                <Grid Name="PlayingField" Margin="20,20,20,20"></Grid>
            </Viewbox>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Name="Bombs_TextBlock"
                           Style="{StaticResource BaseTextBlockStyle}"
                           TextAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Name="Flags_TextBlock"
                           Style="{StaticResource BaseTextBlockStyle}"
                           Grid.Column="1"
                           TextAlignment="Center" VerticalAlignment="Center"/>
                <Grid Grid.Column="2">
                    <Button Name="NewGame_Button" HorizontalAlignment="Center"
                            Click="NewGameClick">
                        New Game
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
